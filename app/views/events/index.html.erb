<%= display_nested_header %>
<ul>


<% @events.each do |event| %>
   <li><a href="/events/<%= event.id %>"><%=event.event_type%> ⚽<%=event.team.name%>⚽<%=event.start.to_formatted_s(:short) %> at <%= event.location %></a></li> 


   <% end %>
</ul>


<%= form_tag events_path, :method => 'get' do %>
   <%= text_field_tag :search, params[:search]%>
   <%= submit_tag "search" %>
   <% end %>


