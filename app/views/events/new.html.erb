<h1>New Event</h1>
<% if @event.errors.any? %>
<div id="error_explanation">

  <h2><%= pluralize(@event.errors.count, "error") %> prohibited this Event to create:</h2>

  <ul>
  <% @event.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
</div>

<% end %>


<%= form_for @event do |e|%>

 
  <%= e.hidden_field :team_id, value: current_player.team_id%><br>

  <%= e.label :location%><br>
  <%= e.text_field :location%><br>

  <%= e.label :event_type%><br>
  <%= e.text_field :event_type%><br>

  <%= e.label :start%><br>
  <%= e.datetime_field :start%><br>

  <%= e.label :end%><br>
  <%= e.datetime_field :end%><br>

  <%= submit_tag "Create"%>
  
<%end%>

<%= button_to "Logout", '/logout', method: :delete%>